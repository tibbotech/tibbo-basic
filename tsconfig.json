{
	"compilerOptions": {
		"declaration": true,
		"target": "es2015",
		"lib": ["esnext"],
		"module": "commonjs",
        "moduleResolution": "node",
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"strict": false,
		"outDir": "lib",
		"rootDir": "src",
		"noImplicitAny": false,
		"typeRoots": [
            "./node_modules/@types"
        ]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
