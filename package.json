{
    "name": "tibbo-basic",
    "displayName": "Tibbo Basic Language",
    "description": "Tibbo Basic Language Support",
    "author": {
        "name": "Jimmy Hu",
        "email": "jimmy.hu@tibbo.com"
    },
    "license": "MIT",
    "version": "1.0.3",
    "repository": "https://github.com/tibbotech/tibbo-basic",
    "publisher": "tibbotech",
    "categories": [],
    "keywords": [
        "tibbo-basic"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:tibbo-basic"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "TIDE",
                "properties": {
                    "tide.platformsPath": {
                        "type": "string",
                        "default": "",
                        "description": "Path to Platforms"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "tibbo-basic",
                "aliases": [
                    "Tibbo Basic"
                ],
                "extensions": [
                    ".tbs",
                    ".tbh",
                    ".tph",
                    ".tpr"
                ],
                "configuration": "./syntaxes/tibbo-basic-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tibbo-basic",
                "scopeName": "source.tibbo-basic",
                "path": "./syntaxes/tibbo-basic.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "vscode:prepublish": "webpack --mode production"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "eslint": "^6.4.0",
        "@typescript-eslint/parser": "^2.3.0",
        "typescript": "^4.0.2",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "ts-loader": "^7.0.5"
    }
}
