{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "allowJs": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "inlineSourceMap": false,
        "sourceMap": true,
        "outDir": "out",
		"rootDir": "src",
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noUnusedParameters": false
    },
    "include": ["src/**/*"],
	"exclude": ["node_modules"]
}